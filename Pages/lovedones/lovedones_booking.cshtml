<style type='text/css'>
    /* basic positioning */
    .legend {
        list-style: none;
    }

        .legend li {
            float: left;
            margin-right: 10px;
        }

        .legend span {
            border: 1px solid #ccc;
            float: left;
            width: 12px;
            height: 12px;
            margin: 2px;
        }
        /* your colors */
        .legend .superawesome {
            background-color: #C01E1E;
        }

        .legend .awesome {
            background-color: #E2CE19;
        }

        .legend .kindaawesome {
            background-color: #36C160;
        }

        .legend .notawesome {
            background-color: #000000;
        }

    .legendcolor {
    }

        .legendcolor:after {
            position: absolute;
            top: 0;
            left: 0;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            content: '';
            background: #28a745;
        }
</style>

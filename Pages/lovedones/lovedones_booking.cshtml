<script>
    document.getElementById("button2").addEventListener("click", displaybutton2);
    document.getElementById("button1").addEventListener("click", displaybutton1);
    function displaybutton2() {
        document.getElementById("button2").classList.remove('primary-border');
        document.getElementById("button2").classList.add('primary');
        document.getElementById("button1").classList.remove('primary');
        document.getElementById("button1").classList.add('primary-border');
        document.getElementById("f2f").style.display = "none";
        document.getElementById("vs").style.display = "block";


    }
    function displaybutton1() {
        document.getElementById("button1").classList.remove('primary-border');
        document.getElementById("button1").classList.add('primary');
        document.getElementById("button2").classList.remove('primary');
        document.getElementById("button2").classList.add('primary-border');
        document.getElementById("f2f").style.display = "block";
        document.getElementById("vs").style.display = "none";
    }
</script>


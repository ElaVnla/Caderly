                    <div class="tab-pane fade show active p-3" id="one" role="tabpanel" aria-labelledby="one-tab">
                        <div style="overflow-y:scroll; max-height:400px;">
                            @if (Model.BookInfoList != null)
                            {
                                @foreach (var bookInfo in Model.BookInfoList)
                                {
                                    @if (bookInfo.bookstatus == "OnGoing")
                                    {
                                        <form method="post">

                                            <div class="card w-100 mb-30 mr-10 shadow">
                                                <div class="card-body">
                                                    <div style="visibility:hidden;">
                                                        <input type="text" id="txtBookId" name="txtBookId" value="@bookInfo.bookId" />
                                                    </div>
                                                    <div class="float-left col-sm-3 d-flex justify-content-center border-right">
                                                        <ul class="list-group list-group-flush">
                                                            <li class="list-group-item d-flex justify-content-center" style="border: none;"><center><h1><strong>@bookInfo.bookday</strong></h1></center></li>
                                                            @{
                                                                string[] strMonth = {"January","February","March","April","May","June",
                                                                         "July","August","September","October","November","December"};
                                                                <li class="list-group-item d-flex justify-content-center" style="border: none;"><h1><strong>@strMonth[bookInfo.bookmonth - 1]</strong></h1></li>
                                                            }
                                                            <li class="list-group-item d-flex justify-content-center" style="border: none;"><h6><strong>@bookInfo.bookyear &nbsp; &nbsp; @bookInfo.booktime</strong></h6></li>
                                                        </ul>
                                                    </div>

                                                    <div class="float-right col-sm-9 pl-5">
                                                        @if (bookInfo.booktype == 1)
                                                        {
                                                            <div class="row col-sm-10 pb-10">
                                                                <label><strong>Title of booking:&nbsp;</strong></label>
                                                                <h5><strong></strong>Face to Face</h5>

                                                            </div>
                                                            <div class="row col-sm-7 pb-10">
                                                                <div class="col row">
                                                                    <label><strong>No. of visitors:&nbsp;</strong></label>
                                                                    <h5>@bookInfo.bookvisitors &nbsp; visitors</h5>
                                                                </div>
                                                            </div>
                                                            <div class="row col-sm-7 pb-10">
                                                                <div class="col row">
                                                                    <label><strong>Duration of stay:&nbsp;</strong></label>
                                                                    <h5>@bookInfo.bookduration</h5>
                                                                </div>
                                                            </div>
                                                            <div class="row col-sm-10">
                                                                <label><strong>location:&nbsp;</strong></label>
                                                                <h5>49 Upper Thomson Rd, Singapore 574325</h5>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div class="row col-sm-10 pb-10">
                                                                <label><strong>Title of booking:&nbsp;</strong></label>
                                                                <h5><strong></strong>Video Call</h5>

                                                            </div>
                                                            <div class="row col-sm-7 pb-10">
                                                                <div class="col row">
                                                                    <label><strong>Duration of Call:&nbsp;</strong></label>
                                                                    <h5>@bookInfo.bookduration</h5>
                                                                </div>
                                                            </div>
                                                            <div class="row col-sm-10">
                                                                <label><strong>Platform:&nbsp;</strong></label>
                                                                <h5>Via Zoom</h5>
                                                            </div>
                                                            <br />
                                                            <br />
                                                        }
                                                    </div>

                                                    <div class="float-right">
                                                        <div>
                                                            <a asp-area="" asp-page="/" class="genric-btn primary-border circle">Edit Booking</a>
                                                            <a asp-area="" asp-page="/" class="genric-btn primary-border circle">Add to google calendar</a>
                                                            <button type="submit" class="genric-btn primary-border circle">Cancel</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    }
                                }
                            }
                            else
                            {
                                <h1>No Booking Yet!</h1>
                            }
